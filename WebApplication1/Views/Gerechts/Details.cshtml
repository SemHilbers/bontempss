@model WebApplication1.Models.Gerecht

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gerecht</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Soort)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Soort.Soort)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naam)
        </dd>
    </dl>
</div>
<!--Met deze code laat je de ingredienten zien bij het weizigen van het product-->
<div class="row">
    <h5>Ingredienten voor @Html.DisplayNameFor(model => model.Naam)</h5>
    @await Component.InvokeAsync("GerechtIngredienten", new { id = Model.Id }) 
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
